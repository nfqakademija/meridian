{% extends "::userbase.html.twig" %}
{% block title %} Naujos Parodos {% endblock %}
{% block body %}

        <div id="content">
            <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                {% for city in cities %}
                    <li><a href="#{{ city.city }}" data-toggle="tab">{{ city.city }}</a></li>
                {% endfor %}
            </ul>
            <div id="my-tab-content" class="tab-content">
                {% for city in cities %}
                    <div class="tab-pane active" id="{{ city.city }}">
                        <h2>{{ city.city }} </h2>
                        {% for expo in expos %}
                            {% if expo.city == city.city %}
                                <div class="expo-group">
                                    {% if expo.picture != ''%}
                                        <img src='{{ expo.picture }}' style="width: 10%; height: 10%; float: left; position: relative;"/>
                                    {% endif %}
                                    <div class="expo-text">
                                        <div class="expo-name" style="font-weight: bold;">
                                            <p>{{ expo.name }}</p>
                                        </div>

                                        <p>{{ expo.address }}</p>
                                        <p>{{ expo.time }}</p>

                                        <a href="{{ expo.link }}">IÅ¡samiau ></a>
                                    </div>

                                    <hr>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>


        <script type="text/javascript">
            jQuery(document).ready(function ($) {
                $('#tabs').tab();
            });
        </script>
{% endblock %}