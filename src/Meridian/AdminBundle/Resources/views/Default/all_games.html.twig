{% extends '::admin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Žaidimų sąrašas</h1>
        <ul>
            {% for game in games %}
                <li>
                    {{ game.name }} -
                    <a href="{{ path('admin_show_game', {'id': game.id}) }}">Peržiūrėti žaidimą</a>
                    <a href="{{ path('admin_edit_game', {'id': game.id}) }}">Redaguoti</a>
                    <a href="{{ path('admin_delete_game',{'id': game.id}) }}">Trinti žaidimą</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <p><a href="{{ path('admin_home_page') }}">Grįžti atgal</a></p>
{% endblock %}