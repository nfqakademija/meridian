    <div class="container">
    <div class="row ">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <div class="panel panel-default border-radius0">
        <div class="panel-heading text-center panel-background">
            <strong> Redaguokite duomenis </strong>
        </div>
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_registration_register panel panel-default border-radius0">
        {{ form(form) }}
            <form name="meridian_corebundle_game" method="post" action="/admin/update/2">
                <input type="hidden" name="_method" value="PUT" />
