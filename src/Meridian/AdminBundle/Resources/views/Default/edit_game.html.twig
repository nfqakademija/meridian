                        <label for="meridian_corebundle_game_description">Description</label>
                        <input class="form-control whitespace-bottom" type="text" id="meridian_corebundle_game_description" name="meridian_corebundle_game[description]" maxlength="255" /></div>
                    <div class="text-center">
                        <label for="meridian_corebundle_game_status" class="required">Status</label>
                        <input type="checkbox" id="meridian_corebundle_game_status" name="meridian_corebundle_game[status]" required="required" maxlength="20" value="1" /></div>
                    <div class="text-center">
                        <button class="btn btn-danger square-btn-adjust border-radius0 whitespace-bottom" type="submit" id="meridian_corebundle_game_submit" name="meridian_corebundle_game[submit]">Redaguoti žaidimą</button></div>
                        <input type="hidden" id="meridian_corebundle_game__token" name="meridian_corebundle_game[_token]" value="I5f_cTX4j5lSl3_yNSW3BLCD2pX8CzeBCrPf8brW_zA" />
                </div>
            </form>
        </form>
