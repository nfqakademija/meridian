{% extends "::base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row text-center ">
            <div class="col-md-12">
                <br /><br />
                    <h2> Muziejų populiarinimo projektas</h2>
                <br />
            </div>
        </div>
        <div class="row ">

            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>   Įveskite prisijungimo duomenis </strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                            <br />
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-tag"  ></i></span>
                                <input type="text" class="form-control" name="_username" required="required" placeholder="vartotojo vardas">
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"  ></i></span>
                                <input type="password" class="form-control" name="_password" required="required" placeholder="password">
                            </div>
                            <div class="form-group">
                                            <span class="pull-right">
                                                   <a href="{{ path('fos_user_resetting_request') }}">(pamiršau slaptažodį)</a>
                                            </span>
                            </div>

                            <button type="submit" class="btn btn-sm btn-default">Prisijungti</button>
                            <hr />
                            <a href="{{ path('meridian_core_demo_default') }}" class="btn btn-danger square-btn-adjust ">Išbandyti demo versija</a>
                            <a href="{{ path("fos_user_registration_register") }}" >Registracija </a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>





{% endblock %}

