{% extends "::base.html.twig" %}
{% block body %}
<div class="container">
    <div class="row clearfix">
        <div class="col-md-6">
            <form class="form-signin" method="post" action="{{ path('login_login_signup') }}">
                <h2>Sign Up</h2>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" name="username" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">First Name</label>
                    <input type="text" class="form-control" name="firstname" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-success btn-lg">Create Account</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}