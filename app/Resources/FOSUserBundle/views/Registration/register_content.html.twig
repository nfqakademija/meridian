{% trans_default_domain 'FOSUserBundle' %}

                <div class="panel-heading text-center panel-background">
                    <strong> Ä®veskite registracijos duomenis </strong>
                </div>
                <div class="panel-body">
                    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
                          class="fos_user_registration_register">
                        {{ form_errors(form) }}
                        {#<div class="form-group input-group">#}
                            {#<span class="input-group-addon"><i class="fa fa-tag"  ></i></span>#}
                            {#<input type="text" class="form-control" name="_username" required="required" placeholder="vartotojo vardas">#}
                        {#</div>#}
                        {#{{ form_label(form.username.first) }}#}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': form.username.vars.label}} ) }}

                        {#{{ form_label(form.email.first) }}#}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': form.email.vars.label}} )}}
                        {{ form_errors(form.email) }}


                        {#{{ form_label(form.plainPassword.first) }}#}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': form.plainPassword.vars.label}} ) }}
                        {{ form_errors(form.plainPassword.first) }}


                        {#{{ form_label(form.plainPassword.second) }}#}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': form.plainPassword.vars.label}} ) }}


                        {{ form_rest(form) }}
                        <div class="text-center">
                            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-danger square-btn-adjust "/>
                        </div>
                    </form>

</div>