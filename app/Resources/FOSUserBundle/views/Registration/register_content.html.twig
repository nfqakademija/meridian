{% trans_default_domain 'FOSUserBundle' %}
<div class="panel-heading">
    <strong>Registracija</strong>
   </div>
<div class="panel-body">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
          class="fos_user_registration_register">
        {{ form_errors(form) }}
        {{ form_label(form.username) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': form.username.vars.label }}
        ) }}
        {{ form_errors(form.username) }}

        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label }}
        ) }}
        {{ form_errors(form.email) }}

        {{ form_label(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': form.plainPassword.first.vars.label }}
        ) }}
        {{ form_errors(form.plainPassword.first) }}

        {{ form_label(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': form.plainPassword.second.vars.label }}
        ) }}

        {{ form_rest(form) }}
        <div>
            <input type="submit" value="{{ 'registration.submit'|trans }}"
                   class="btn btn-sm btn-default"/>
        </div>
    </form>
</div>
